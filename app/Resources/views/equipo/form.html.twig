{% extends 'layout.html.twig' %}

{% block title equipo ~ " - Detalle" %}

{% block content %}
    <h1 class="well">Detalles del equipo {{ equipo }}</h1>
    <img src="{{ path('emblema_equipo', {'equipo': equipo.id}) }}" width="100" height="100"/>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Guardar cambios del equipo</button>
            <a href="{{ path('lista_equipo') }}" class="btn btn-info"><i class="fa fa-arrow-left"></i> Volver al listado de equipos</a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
